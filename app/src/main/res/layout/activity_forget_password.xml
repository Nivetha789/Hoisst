<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="60dp"
                        android:paddingRight="16dp"
                        android:text="Forgot Password ?"
                        android:textColor="#002f4f"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txt_welcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Just Verify Your Mobile Number Code to \nset new password"
                        android:textColor="#CC002f4f"
                        android:textFontWeight="600"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_box_size"
                        android:layout_marginTop="73dp"
                        android:layout_marginLeft="@dimen/edt_left_right_margin"
                        android:layout_marginRight="@dimen/edt_left_right_margin"
                        android:padding="1dp"
                        android:background="@drawable/lin_storke"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/lin_login_clr_storke"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_phone" />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c3cde4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <EditText
                                    android:id="@+id/edt_mob_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:enabled="false"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:hint="Mobile Number"
                                    android:textCursorDrawable="@drawable/color_cursor"
                                    android:maxLength="10"
                                    android:paddingLeft="@dimen/left_right_margin_12"
                                    android:singleLine="true"
                                    android:textColor="#5b636a"
                                    android:textColorHint="#805b636a"
                                    android:textSize="@dimen/edit_text_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txt_resend_otp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/quicksand_regular"
                                    android:gravity="center|right"
                                    android:text="Resend OTP?"
                                    android:textFontWeight="600"
                                    android:paddingRight="12dp"
                                    android:textColor="#002f4f"
                                    android:textSize="12sp" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_box_size"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:padding="1dp"
                        android:background="@drawable/lin_storke"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/lin_login_clr_storke"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_otp_icon" />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c3cde4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/edt_otp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:hint="Enter OTP"
                                    android:inputType="number"
                                    android:textCursorDrawable="@drawable/color_cursor"
                                    android:maxLength="4"
                                    android:paddingLeft="@dimen/left_right_margin_12"
                                    android:paddingRight="@dimen/left_right_margin_12"
                                    android:singleLine="true"
                                    android:textColor="#5b636a"
                                    android:textColorHint="#805b636a"
                                    android:textSize="@dimen/edit_text_size" />


<!--                                <ImageView-->
<!--                                    android:id="@+id/img_otp_done"-->
<!--                                    android:layout_width="19dp"-->
<!--                                    android:layout_height="19dp"-->
<!--                                    android:layout_alignParentRight="true"-->
<!--                                    android:layout_centerInParent="true"-->
<!--                                    android:visibility="gone"-->
<!--                                    android:layout_marginRight="16dp"-->
<!--                                    android:src="@mipmap/success" />-->

                                <ProgressBar
                                    android:id="@+id/otp_progress"
                                    android:layout_width="19dp"
                                    android:layout_height="19dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="16dp"
                                    android:visibility="gone"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="16dp" />


                            </RelativeLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_box_size"
                        android:layout_marginLeft="@dimen/edt_left_right_margin"
                        android:layout_marginTop="@dimen/edt_txt_top_margin"
                        android:layout_marginRight="@dimen/edt_left_right_margin"
                        android:padding="1dp"
                        android:background="@drawable/lin_storke"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/lin_login_clr_storke"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_password" />

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c3cde4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5">

                                <EditText
                                    android:id="@+id/edt_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:hint="Create New Password"
                                    android:inputType="textPassword"
                                    android:textCursorDrawable="@drawable/color_cursor"
                                    android:enabled="false"
                                    android:paddingLeft="12dp"
                                    android:singleLine="true"
                                    android:textColor="#5b636a"
                                    android:textColorHint="#805b636a"
                                    android:textSize="@dimen/edit_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin_eye"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/img_eye"
                                    android:layout_width="19dp"
                                    android:layout_height="19dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_show_eye" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_dis_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center|left"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:text="Password should contain 4 - 16 character &amp; should\ncontain alphanumeric and special character"
                        android:textColor="#d1d1d1"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_box_size"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lin_login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/lin_button"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt_signIn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:text="SIGN IN"
                                android:textFontWeight="600"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/btn_text_size" />

                        </LinearLayout>

<!--                        <ProgressBar-->
<!--                            android:id="@+id/progressBar"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:background="@android:color/transparent"-->
<!--                            android:indeterminate="true"-->
<!--                            android:indeterminateTintMode="src_atop"-->
<!--                            android:theme="@style/Theme.LiveOrder.PurpleTheme"-->
<!--                            android:visibility="gone" />-->

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/txt_have_an_acc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/quicksand_regular"
                            android:gravity="center"
                            android:text="Want to go back?"
                            android:textColor="#2e3e6a"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12.8dp"
                        android:background="@drawable/lin_get_started"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/quicksand_regular"
                            android:gravity="center"
                            android:text="Back"
                            android:textColor="#0d1321"
                            android:textFontWeight="600"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>