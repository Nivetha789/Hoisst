<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constrain_view">

    <View
        android:id="@+id/profile_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/profile_top_bg"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/profile_bg_bottom_view"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/profile_bg"
        app:layout_constraintLeft_toLeftOf="@+id/profile_bg"
        app:layout_constraintRight_toRightOf="@+id/profile_bg" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:padding="6dp"
        android:src="@drawable/ic_left_arrow"
        app:tint="@color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:padding="6dp"
        android:src="@drawable/edit"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <TextView
        android:id="@+id/profiler_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_dark"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="Sai Krish"
        android:maxHeight="100dp"
        android:minHeight="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/profiler_user_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <ImageView
        android:id="@+id/profiler_user_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_toolbar_profile"
        app:layout_constraintBottom_toTopOf="@+id/profile_details_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiler_name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_details_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_bg_bottom_view">

        <include layout="@layout/profile_details_include" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30" />

</androidx.constraintlayout.widget.ConstraintLayout>