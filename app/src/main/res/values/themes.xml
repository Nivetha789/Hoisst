<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moisst" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#225497</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#27D1B0</item>
        <item name="colorSecondaryVariant">#04D0A8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Moisst.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>-->
    </style>

    <style name="Theme.EverGreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EverGreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Moisst.PurpleTheme">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>


    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- Set the background of the custom layout to be transparent -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Set the window background transparent, that is, go to the border -->
    </style>
<!--    <style name="DialogAnimation">-->
<!--        <item name="android:windowEnterAnimation">@anim/slide_up</item>-->
<!--        <item name="android:windowExitAnimation">@anim/slide_down</item>-->
<!--    </style>-->

    <style name="CircleImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="android:shape">oval</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>